@model IEnumerable<MuseumManagement.Models.Museum>

@{
    ViewData["Title"] = "Index";
}

<h1>Muzea</h1>

<p>
    <a asp-action="Create">Dodaj</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MuseumName)
            </th>
            <th>
               Miasto
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MuseumName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.CityName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdMuseum">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.IdMuseum">Szczegóły</a> | |
                <a asp-action="Delete" asp-route-id="@item.IdMuseum">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
