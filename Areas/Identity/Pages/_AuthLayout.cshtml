@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div style="margin-bottom: 11%; position: relative">
    <div class="row" style="height: 466px;">
        <!-- <div class="com-md-6 offset-md-1">-->
        <div class="card login-logout-tab" style="margin: 2px auto; min-width: 400px">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link" href='/Identity/Account/Login'>Zaloguj</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href='/Identity/Account/Register'>Zarejestruj</a>
                    </li>
                </ul>
            </div>
            <div class="card-content">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="text" style="font-family: 'Potta One', cursive; text-align: center; font-size: 25px;
     position: absolute; top: 107%;">
        Zaloguj się lub zarejestruj aby korzystać z aplikacji do zarządzania eksponatami muzealnymi!
    </div>
    <!--
    </div>
    -->
</div>

@section Scripts{
    @RenderSection("Scripts", required: false)

    <script>
        $(function () {
            var current = location.pathname;
            $('.nav-tabs li a').each(function () {
                var $this = $(this);
                if (current.indexOf($this.attr('href')) !== -1) {
                    $this.addClass('active');
                }
            })
        })
    </script>
}