@page
@model LoginModel

@{
    ViewData["Title"] = "Zaloguj";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

    <div class="col-md-10 offset-md-1">
        <section>
            <div class="login-form-icon">
                <i class="far fa-user-circle fa-9x" style="color: #F2B705; 
                font-size: 110px; position: relative; top: 50%; margin-top: 10px;
                left: calc(50% - 55px);"></i>
            </div>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email">email</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">hasło</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            Zapamiętaj mnie
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block" style="background-color: #F2F2F2">Zaloguj</button>
                </div>
            </form>
        </section>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
